<style>
  /* Mobile Styles */

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    position: relative;
  }

  .content {
    padding: 1rem var(--global-side-padding-mobile);
    flex-grow: 1;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  header {
    padding: 0.5rem var(--global-side-padding-mobile);
    background-color: var(--background);

    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    #hamburger-icon:active {
      color: var(--primary);
    }

    #close-hamburger-menu:active {
      color: var(--background);
    }

    ul {
      font-family: "Manrope";
      font-weight: 600;
      color: white;
      display: flex;
      gap: 1rem;
    }

    li {
      background-color: var(--text);
      padding: 0.25rem 0.5rem;
      border-radius: 8px;
      transition:
        background-color 0.1s,
        color 0.1s;
    }

    li:hover {
      color: var(--text);
      background-color: var(--accent);
    }
  }

  .nav-links-desktop {
    display: none;
  }

  .nav-links-mobile {
    background-color: var(--primary);
    position: fixed;
    top: 0;
    left: 0;
    width: 0;
    height: 100vh;
    z-index: 1;
    overflow-x: hidden;
    transition: 0.5s;

    svg {
      margin-bottom: 2rem;
    }

    ul {
      display: flex;
      flex-direction: column;
    }
  }

  footer {
    display: grid;
    gap: 2rem;
    background-color: var(--background);
    padding: 1rem var(--global-side-padding-mobile);

    svg {
      max-width: 150px;
    }

    div {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;

      p {
        color: var(--secondary);
        padding: 0.25rem;
      }
    }

    ul {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    li {
      padding: 0.5rem 0.25rem;
    }

    li:hover {
      text-decoration: underline;
    }
  }

  /* Desktop Styles */

  @media screen and (min-width: 810px) {
    header {
      padding: 1rem var(--global-side-padding-desktop);
    }

    .content {
      padding: 1rem var(--global-side-padding-desktop);
    }

    .nav-links-mobile,
    #hamburger-icon {
      display: none;
    }
    .nav-links-desktop {
      display: block;
    }

    footer {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: 1fr 2fr;
      padding: 1rem var(--global-side-padding-desktop);

      svg {
        max-width: 300px;
      }

      .footer-contact {
        grid-row-start: 2;
      }
      .footer-explore {
        grid-col-start: 2;
        grid-row-start: 2;
        border-right: 1px solid var(--secondary);
      }
    }
  }
</style>
