---
import CoverImage from "../images/cover_1.jpg";
---

<div class="album">
  <div class="cover-image">
    <a href="#"><img src={CoverImage.src} alt="" /></a>
  </div>
  <div class="album-details">
    <p class="title"><a href="#">Learner's Toolkit Deluxe Edition</a></p>
    <p class="release-date">Album â€¢ 2022</p>
  </div>
</div>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }

  .album {
    display: grid;
    min-width: 150px;
    max-width: 280px;
    gap: 0.5rem;
    font-family: "Domine";
    font-weight: 700;
    flex-shrink: 0;
  }

  .cover-image {
    width: 100%;
    overflow: hidden;

    &:hover {
      filter: drop-shadow(0 0 10px hsla(184, 57%, 45%, 1));
    }
  }

  img {
    width: 100%;
    display: block;
  }

  .title {
    font-size: var(--body-mobile);
    font-weight: 700;
  }

  .title:hover {
    color: var(--accent);
  }

  .release-date {
    font-size: var(--body-mobile);
    font-family: "Manrope";
    font-weight: 600;
    color: var(--accent);
  }

  /* Desktop Styles */
  @media screen and (min-width: 810px) {
    .title {
      font-size: var(--body-desktop);
    }
    .release-date {
      font-size: var(--subtitle-desktop);
    }
  }
</style>
