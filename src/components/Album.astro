---
const { albumTitle, cover, year, type, href } = Astro.props;
---

<div class="album">
  <div class="cover-image">
    <a href={href}><img src={cover} alt="" /></a>
  </div>
  <div class="album-details">
    <p class="title"><a href={href}>{albumTitle}</a></p>
    <p class="release-date">
      {type.charAt(0).toUpperCase() + type.slice(1)} â€¢ {year}
    </p>
  </div>
</div>

<style>
  a {
    text-decoration: none;
    color: inherit;
  }

  .album {
    display: grid;
    min-width: 150px;
    max-width: 280px;
    gap: 0.5rem;
    font-family: var(--font-secondary);
    font-weight: 700;
    flex-shrink: 0;
  }

  .cover-image {
    width: 100%;
    overflow: hidden;

    &:hover {
      filter: drop-shadow(0 10px 5px rgb(114, 153, 108, 0.2));
    }
  }

  img {
    width: 100%;
    display: block;
  }

  .title {
    font-size: var(--body-mobile);
    font-weight: 700;
  }

  .title:hover {
    color: var(--accent);
  }

  .release-date {
    font-size: var(--body-mobile);
    font-family: "Manrope";
    font-weight: 600;
    color: var(--accent);
  }

  /* Desktop Styles */
  @media screen and (min-width: 810px) {
    .title {
      font-size: var(--body-desktop);
    }
    .release-date {
      font-size: var(--subtitle-desktop);
    }
  }
</style>
